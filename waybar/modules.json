{
  "custom/nixos": {
    "format": "",
    "tooltip": true,
    "tooltip-format": "Nixos btw",
    "on-click": "xdg-open 'https://search.nixos.org/packages' 2>/dev/null"
  },

  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{name}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    }
  },

  "group/audio": {
    "orientation": "horizontal",
    "modules": [
      "bluetooth",
      "pulseaudio"
    ]
  },

  "group/hardware-capacity": {
    "orientation": "horizontal",
    "modules": [
      "memory",
      "cpu"
    ]
  },

  "group/hardware-temperature": {
    "orientation": "horizontal",
    "modules": [
      "temperature",
      "custom/nvidia_temperature"
    ]
  },

  "bluetooth": {
    "format": " {status}",
    "format-disabled": "",
    "format-connected": " {num_connections}",
    "tooltip-format": "{device_alias}",
    "tooltip-format-connected": " {device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "on-click": "blueman-manager"
  },

  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{icon} {volume}%  {format_source}",
    "format-bluetooth-muted": " {icon} {format_source}",
    "format-muted": " {format_source}",
    "format-source": " {volume}%",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": [
        "",
        "",
        ""
      ]
    },
    "on-click": "pavucontrol"
  },

  "network": {
    "format-wifi": "   {essid} ({signalStrength}%)",
    "format-ethernet": "󰈀 {ipaddr}/{cidr}",
    "tooltip-format": "{ifname} via {gwaddr}",
    "format-linked": "{ifname} (No IP) ",
    "format-disconnected": "Disconnected ⚠",
    "on-click": "sh ~/scripts/rofi-wifi-menu/rofi-wifi-menu.sh"
  },

  "cpu": {
    "format": " {usage}%",
    "tooltip": true,
    "interval": 10
  },

  "memory": {
    "format": "  {used:0.1f}G",
    "tooltip": true,
    "tooltip-format": "{used:0.1f}G / {total:0.1f}G ({}%)",
    "interval": 10
  },

  "temperature": {
    "interval": 10,
    "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
    "critical-threshold": 100,
    "format-critical": " {temperatureC}!",
    "format": "{icon} {temperatureC}°C",
    "tooltip": true,
    "tooltip-format": "AMD CPU Temp",
    "format-icons": [
      "",
      "",
      "",
      ""
    ]
  },

  "custom/nvidia_temperature": {
    "interval": 10,
    "exec": "~/.config/waybar/scripts/nvidia_temp.sh",
    "return-type": "json",
    "format": "{}",
    "on-click": "nvidia-smi"
  },

  "hyprland/language": {
    "format": "  {}",
    "format-en": "EN",
    "format-fi": "FI",
    "on-click": "hyprctl switchxkblayout main next"
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}  {capacity}%",
    "format-full": "{icon}  {capacity}%",
    "format-charging": "  {capacity}%",
    "format-plugged": "  {capacity}%",
    "format-alt": "{time}  {icon}",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ]
  },

  "clock": {
    "format": "{:%H:%M | %e.%m.}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt>\n<small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d %H-%M}",
    "timezone-alt": "utc"
  }
}
